@page
@model StajProjesi.Areas.Identity.Pages.Account.ResendEmailConfirmationModel
@{
    ViewData["Title"] = "E-posta Doğrulamasını Yeniden Gönder";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm" style="max-width: 420px; width: 100%;">
        <div class="card-body">
            <h1 class="h4 mb-3 text-center">@ViewData["Title"]</h1>

            @if (TempData["StatusMessage"] is string status && !string.IsNullOrWhiteSpace(status))
            {
                <div class="alert alert-success" role="alert">@status</div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Gönder</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-page="./Login">Giriş sayfasına dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}